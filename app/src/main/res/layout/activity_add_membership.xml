<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_background"
    tools:context=".MainActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your details"
        android:textSize="24dp"
        android:textColorHint="@color/hint_text"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/text"
        android:hint="Name"
        android:textColorHint="@color/hint_text"/>
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:hint="Address"
        android:textColorHint="@color/hint_text"/>

    <EditText
        android:id="@+id/Cnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:hint="Contact num"
        android:textColorHint="@color/hint_text"/>

    <EditText
        android:id="@+id/unpaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Cnum"
        android:hint="Unpaid Dues"
        android:textColorHint="@color/hint_text"/>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unpaid"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:text="Insert" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unpaid"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/btnInsert"
        android:background="@drawable/rounded_button"
        android:text="View" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInsert"
        android:layout_marginTop="24dp"
        android:text="Update"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/btnUpdate"
        android:text="Delete"
        android:textColor="@color/red"
        android:background="@drawable/rounded_button"/>


</RelativeLayout>